@model AppUser
@{
    ViewData["Title"] = "UPDATE USER";
}
<div class="text-white text-center bg-secondary p-3 border-dark align-content-center">
<h1>Update User</h1>
<a asp-action="Index" class="btn btn-primary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control text-center" disabled />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control text-center" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control text-center" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
            <input name="password" class="form-control text-center" />
    </div>
    <br/>
        <button type="submit" class="btn btn-success">Save</button>
</form>
</div>