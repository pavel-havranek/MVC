@using MagistriMVC.ViewModels;
@model LoginVM
<div class="text-white text-center bg-secondary p-3 border-dark align-content-center">
    <h1 >Login</h1>
<div class="text-danger " asp-validation-summary="All"></div>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group ">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control text-center" />
    </div>
    <div class="form-group ">
        <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control text-center" />
    </div>
    <div class="form-group">
        Remember me? <input type="checkbox" asp-for="Remember" />
    </div>
        <button class="btn btn-dark" type="submit">Log In</button>
</form>
</div>