@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
<div class="text-white text-center bg-secondary p-3 border-dark align-content-center">
<h1 class=" text-white">All Roles</h1>

    <table class="table table-sm table-bordered table-bordered">
        <tr class="text-white">
            <th>Name</th>
            <th>Update</th>
            <th>Delete</th>
            <th>ID</th>
        </tr>
        @foreach (var role in Model) {
            <tr class="text-white">
                <td>@role.Name</td>
                <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
                <td>@role.Id</td>
            </tr>
        }
    </table>
    <div>
        <a class="btn btn-success" asp-action="Create">Create a new role</a>
    </div>
</div>
