@model IEnumerable<Student>
<div class="text-white text-center bg-secondary p-3 border-dark align-content-center">
<h3>List of students:</h3>
    <div class="border border-1 border-dark p-2">
<form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Upload">
    <div class="form-group">
        <input type="file" name="file" />
        @*pozor, na name je zavisle jmeno parametru, cili souboru predavaneho do controlleru. Pokud se parametr jmenuje file, musi i name inputu byt file*@
    </div>
  
    <div class="form-group">
        <input type="submit" value="Upload" />
    </div>
</form>
    </div>
<br />

@foreach (var student in Model)
{
    <div class="border border-1 border-dark p-2 ">
        <h5>@student.FirstName @student.LastName</h5>
        Id: @student.Id
        <p>Date of Birth: "@student.DateOfBirth.ToShortDateString()"</p>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
    </div>
}
<hr />
<div>
    <a class="btn btn-success" asp-action="Create">Create a new student</a>
</div> 
</div>