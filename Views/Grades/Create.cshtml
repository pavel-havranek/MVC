@using MagistriMVC.ViewModels;
@model GradesViewModel
<div class="text-white text-center bg-secondary p-3 border-dark align-content-center">
    <h3>Create a new grade</h3>
    <form asp-action="Create">
        <div class="form-group ">
            <label asp-for="StudentId" class="control-label"></label>
            <select asp-for="StudentId" class="form-control text-center" asp-items="ViewBag.Students"></select>
        </div>
        <div class="form-group">
            <label asp-for="SubjectId" class="control-label"></label>
            <select asp-for="SubjectId" class="form-control text-center" asp-items="ViewBag.Subjects"></select>
        </div>
        <div class="form-group">
            <label asp-for="What"></label>
            <input asp-for="What" type="text" class="form-control text-center" />
        </div>
        <div class="form-group">
            <label asp-for="Mark"></label>
            <input asp-for="Mark" type="number" class="form-control text-center" />
        </div>
        <br/>
        <div>
            <input class="btn btn-success" type="submit" value="Create" />
        </div>
    </form>
</div>
